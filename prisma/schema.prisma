generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  username       String        @unique
  name           String?
  email          String        @unique
  profilePicture String?       @db.VarChar(300)
  password       String        @db.VarChar(300)
  userAuthorities UserAuthority[]
  token          UserToken?     

  @@map("users")
}

model Authority {
  id             Int           @id @default(autoincrement())
  authority      String        @unique
  userAuthorities UserAuthority[]

  @@map("authorities")
}

model UserAuthority {
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String

  authority        Authority @relation(fields: [authorityId], references: [id], onDelete: Cascade)
  authorityId      Int

  @@id([userId, authorityId])
  @@map("users_authorities")
}

model UserToken {
  id           Int    @id @default(autoincrement())
  accessToken  String @db.VarChar(2048)
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String @unique 

  @@map("user_tokens") 
}
